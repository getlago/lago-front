{
  "name": "lago-design-system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts",
      "style": "./dist/style.css"
    },
    "./images/*": "./dist/images/*",
    "./style": "./dist/style.css"
  },
  "files": [
    "dist/index.js",
    "dist/style.css",
    "dist/types",
    "dist/images"
  ],
  "scripts": {
    "dev": "vite --config playground/vite.config.playground.ts",
    "build": "rm -rf dist && tsc --build tsconfig.build.json && vite build",
    "lint": "prettier --check \"./src/**/*.{ts,tsx,svg}\" \"./playground/**/*.{ts,tsx,svg}\" && eslint .",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "@mui/material": "5.14.18",
    "@mui/x-date-pickers": "6.20.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-router-dom": "6.15.0"
  },
  "dependencies": {
    "lodash": "4.17.21",
    "lodash-es": "^4.17.21",
    "sanitize-html": "2.12.1"
  },
  "devDependencies": {
    "@svgr/core": "^8.1.0",
    "@svgr/plugin-svgo": "^8.1.0",
    "@svgr/plugin-jsx": "^8.1.0",
    "@types/lodash": "4.17.16",
    "@types/react": "18.2.38",
    "@types/react-dom": "18.2.17",
    "@types/react-router-dom": "5.3.3",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "class-variance-authority": "^0.7.0",
    "lago-configs": "workspace:*",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.38",
    "typescript": "5.8.3",
    "vite": "^6.2.7",
    "vite-plugin-svgr": "^4.3.0"
  }
}
