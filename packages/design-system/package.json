{
  "name": "lago-design-system",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts",
      "style": "./dist/style.css"
    },
    "./images/*": "./dist/images/*",
    "./style": "./dist/style.css"
  },
  "files": [
    "dist/index.js",
    "dist/style.css",
    "dist/types",
    "dist/images"
  ],
  "scripts": {
    "dev": "vite --config playground/vite.config.playground.ts",
    "build": "rm -rf dist && tsc --build tsconfig.build.json && vite build",
    "lint": "prettier --check \"./src/**/*.{ts,tsx,svg}\" \"./playground/**/*.{ts,tsx,svg}\" && eslint .",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "@mui/material": "5.18.0",
    "@mui/x-date-pickers": "6.20.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.30.3"
  },
  "dependencies": {
    "lodash": "4.17.23",
    "lodash-es": "4.17.23",
    "sanitize-html": "2.17.0"
  },
  "devDependencies": {
    "@svgr/core": "8.1.0",
    "@svgr/plugin-svgo": "8.1.0",
    "@svgr/plugin-jsx": "8.1.0",
    "@types/lodash": "4.17.23",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@types/react-router-dom": "5.3.3",
    "@vitejs/plugin-react": "5.1.3",
    "autoprefixer": "10.4.24",
    "class-variance-authority": "0.7.1",
    "lago-configs": "workspace:*",
    "tailwind-merge": "2.6.0",
    "tailwindcss": "3.4.19",
    "postcss": "8.5.6",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-svgr": "4.5.0"
  }
}
