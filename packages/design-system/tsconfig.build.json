{
  "extends": "./tsconfig.json",
  "include": ["src"],
  "exclude": ["**/__tests__/**", "**/*.test.{ts,tsx}", "playground", "dist", "node_modules"],
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist/types",
