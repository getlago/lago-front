FROM arm64v8/node:14-alpine as build

WORKDIR /app

COPY . .

ARG API_URL

ENV API_URL $API_URL

RUN npm config rm proxy && npm config rm https-proxy
RUN yarn && yarn build && npm prune --production

FROM arm64v8/nginx:1.23-alpine

WORKDIR /usr/share/nginx/html

RUN apk add --no-cache bash

COPY --from=build /app/dist .
COPY ./nginx/nginx.conf /etc/nginx/conf.d/default.conf
COPY ./nginx/gzip.conf /etc/nginx/conf.d/gzip.conf
COPY ./.env.sh ./.env.sh

EXPOSE 80

ENTRYPOINT ["/bin/bash", "-c", "./.env.sh && nginx -g \"daemon off;\""]